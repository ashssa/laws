---
import { getCollection } from "astro:content";
const posts = await getCollection("blog");
---
<html lang="zh-Hant">
  <head>
    <meta charset="utf-8" />
    <title>部落格</title>
    <link rel="stylesheet" href="/blog/styles.css" />
  </head>
  <body class="max-w-3xl mx-auto px-4 py-8 font-sans">
    <h1 class="text-4xl font-bold mb-6">最新文章</h1>
    <ul class="space-y-4">
      {posts
        .sort((a, b) => new Date(b.data.date) - new Date(a.data.date))
        .map(post => (
          <li>
            <a href={`/blog/posts/${post.slug}/`} class="text-2xl font-semibold text-blue-600 hover:underline">
              {post.data.title}
            </a>
            <p class="text-gray-500 text-sm">{post.data.date}</p>
          </li>
        ))}
    </ul>
  </body>
</html>
